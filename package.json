{
  "name": "prlint",
  "version": "1.0.0",
  "main": "src/app.js",
  "repository": "git@github.com:ewolfe/prlint.git",
  "author": "ewolfe <e@ewolfe.me>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"env-cmd .env micro-dev\" \"lt --subdomain prlint --port 3000\"",
    "staging": "concurrently \"micro\" \"lt --subdomain prlint --port 3000\"",
    "start": "probot run ./index.js",
    "apretest": "./pretest.sh",
    "test": "env-cmd .env jest",
    "posttest": "nyc report --reporter=lcov --reporter=html",
    "lint": "eslint ./src/**/*.js ./test/**/*.js"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "env-cmd": "^8.0.2",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.2.2",
    "husky": "^1.0.0",
    "jest": "^24.1.0",
    "lint-staged": "^8.0.0",
    "nock": "^10.0.0",
    "nyc": "^13.0.1",
    "prettier": "1.15.2",
    "smee-client": "^1.0.2",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "flat": "^4.1.0",
    "git-rev-sync": "^1.12.0",
    "probot": "^7.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
